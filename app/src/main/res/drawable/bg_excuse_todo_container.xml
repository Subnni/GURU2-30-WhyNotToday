<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 (연한 회색) -->
    <solid android:color="#F5F5F5" />

    <!-- 모서리 둥글기 -->
    <corners android:radius="14dp" />

    <!-- 테두리 (짙은 회색) -->
    <stroke
        android:width="2dp"
        android:color="#424242" />   <!-- 검정 느낌 나는 회색 -->

    <!-- 패딩 (조금 더 작아 보이게 패딩 줄임) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
