<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 상단 보라 헤더바 -->
    <include
        android:id="@+id/header"
        layout="@layout/layout_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 월 변경 영역 -->
    <LinearLayout
        android:id="@+id/layoutMonthSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnPrevMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◀"
            android:textColor="#4200FF"
            android:textSize="18sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvMonthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:text="2025년 1월"
            android:textColor="#4200FF"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btnNextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶"
            android:textColor="#4200FF"
            android:textSize="18sp"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- 메인 내용 스크롤 영역 -->
    <ScrollView
        android:id="@+id/scrollStat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/layoutMonthSelector"
        app:layout_constraintBottom_toTopOf="@id/navigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- 섹션 1 : 이번 달에는 할 일을 이만큼 해냈어요! -->
            <LinearLayout
                android:id="@+id/sectionTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAF0FF"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvTotalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 달에는 할 일을 이만큼 해냈어요!"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 도넛 차트 자리 -->
                    <FrameLayout
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_marginEnd="16dp">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chartTotal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tvTotalSuccessPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="55%"
                            android:textColor="#4200FF"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </FrameLayout>

                    <!-- 성공 / 실패 라벨 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="#7280FF"
                                android:layout_marginEnd="6dp"/>

                            <TextView
                                android:id="@+id/tvTotalSuccessLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="성공"
                                android:textColor="#7280FF"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="#CCCCCC"
                                android:layout_marginEnd="6dp"/>

                            <TextView
                                android:id="@+id/tvTotalFailLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="실패"
                                android:textColor="#3A3A3A"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- 섹션 2 : 중요한 / 중요하지 않은 일은 각각 이만큼 해냈어요 -->
            <LinearLayout
                android:id="@+id/sectionImportant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAF0FF"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvImportantTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중요한 / 중요하지 않은 일은\n각각 이만큼 해냈어요"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- 중요한 일 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/tvImportantLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="오늘 해야 할 중요한 일"
                            android:textColor="#3A3A3A"
                            android:textSize="13sp"
                            android:layout_marginBottom="8dp"/>

                        <FrameLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp">

                            <!-- 중요한 일 도넛 차트 -->
                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/chartImportant"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tvImportantSuccessPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="70%"
                                android:textColor="#7280FF"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvImportantFailPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textColor="#3A3A3A"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- 일반(중요하지 않은) 일 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvNormalLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해야 할 일"
                            android:textColor="#3A3A3A"
                            android:textSize="13sp"
                            android:layout_marginBottom="8dp"/>

                        <FrameLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp">

                            <!-- 일반 일 도넛 차트 -->
                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/chartNormal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tvNormalSuccessPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="55%"
                                android:textColor="#7280FF"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvNormalFailPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45%"
                            android:textColor="#3A3A3A"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 섹션 3 : 이번 핑계를 가장 많이 했어요 -->
            <LinearLayout
                android:id="@+id/sectionExcuseRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvExcuseRankTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이런 핑계를 가장 많이 했어요"
                    android:textColor="#4200FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- 왼쪽 : 중요한 일, 오른쪽 : 해야 할 일 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layoutExcuseImportantRank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:id="@+id/layoutExcuseNormalRank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 섹션 4 : 가장 해야할 일을 못한 시간대예요 -->
            <LinearLayout
                android:id="@+id/sectionWorstTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvWorstTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가장 해야할 일을 못한 시간대예요"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- 라인 차트 자리 -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartWorstTime"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvEncourage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음 달은 더 힘내보아요!"
                    android:textColor="#3A3A3A"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/navigation_box"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/listMenuImageButton"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/list_menu_image"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="#d7d7d7"/>

        <ImageButton
            android:id="@+id/homeMenuImageButton"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/home_menu_image"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="#d7d7d7"/>

        <ImageButton
            android:id="@+id/statMenuImageButton"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/stat_menu_image"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="#d7d7d7"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
