<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--하단 네비게이션 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/navigation_box"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/listMenuImageButton"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/list_menu_image"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="#cccccc"/>

        <ImageButton
            android:id="@+id/homeMenuImageButton"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/home_menu_image"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="#cccccc"/>

        <ImageButton
            android:id="@+id/statMenuImageButton"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/stat_menu_image"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="#cccccc"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>