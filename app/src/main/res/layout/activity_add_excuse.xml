<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    tools:context=".AddExcuseActivity">

    <!-- 가운데 둥근 카드 (핑계 작성 팝업) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardExcuse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="32dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 카드 안쪽 전체 (세로 레이아웃) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <!-- 상단 타이틀 + 닫기 -->
            <LinearLayout
                android:id="@+id/layoutTitleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="21dp"
                android:orientation="horizontal">

                <!-- 왼쪽 여백 -->
                <LinearLayout
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:orientation="vertical" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- 제목: 핑계 작성 / 수정 -->
                <TextView
                    android:id="@+id/tvDialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="핑계 작성"
                    android:textColor="#3A3A3A"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- 닫기 버튼 -->
                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/vector6"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <!-- 할 일 정보 (시간 + 제목) : 보라 토글 재사용 -->
            <!-- 할 일 정보 박스 (위쪽 회색 사각형) -->
            <LinearLayout
                android:id="@+id/layoutTodoInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_excuse_todo_container"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <!-- 왼쪽 별 아이콘 -->
                <ImageView
                    android:id="@+id/ivTodoIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/star_image"
                    android:tint="#7280FF" />

                <!-- 시간 + 제목 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTodoTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오전 8:00"
                        android:textColor="#808080"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvTodoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침 운동"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <!-- 질문 + 입력 영역 -->
            <LinearLayout
                android:id="@+id/layoutQuestionBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <!-- 질문 텍스트 -->
                <LinearLayout
                    android:id="@+id/layoutQuestionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위 할 일을 못한 "
                        android:textColor="#3A3A3A"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tvKeywordExcuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="핑계"
                        android:textColor="#4200FF"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="는 무엇인가요?"
                        android:textColor="#3A3A3A"
                        android:textSize="17sp" />
                </LinearLayout>


                <!-- 핑계 입력 박스 : 회색 박스 재사용 -->
                <LinearLayout
                    android:id="@+id/layoutExcuseInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr24beeeeee"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <!-- 실제 입력 EditText -->
                    <EditText
                        android:id="@+id/etExcuse"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top|start"
                        android:hint="핑계를 입력해 주세요."
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 하단 버튼 영역 -->
            <LinearLayout
                android:id="@+id/layoutButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="39dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 삭제 버튼 -->
                <LinearLayout
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/cr25bee5656"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvDeleteLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="삭제"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 완료 버튼 -->
                <LinearLayout
                    android:id="@+id/btnComplete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cr25b3a3a3a"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/tvCompleteLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="완료"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
